{
  "name": "sqflint",
  "displayName": "SQFLint",
  "description": "SQFLint integration to vscode",
  "author": "Jan ZÃ­pek",
  "icon": "images/sqflint.png",
  "license": "MIT",
  "version": "0.6.0",
  "publisher": "skacekachna",
  "engines": {
    "vscode": "^1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SkaceKamen/vscode-sqflint"
  },
  "categories": [
    "Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sqf",
    "onCommand:extension.sqflint.provideInitialConfigurations"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "sqf",
        "aliases": [
          "SQF",
          "sqf"
        ],
        "extensions": [ ".sqf" ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "SQFLint Configuration",
      "properties": {
        "sqflint.warnings": {
          "type": "boolean",
          "default": true,
          "description": "Process and display sqflint warnings."
        },
        "sqflint.indexWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Scan workspace for sqf files and parse them upon opening."
        }
      }
    },
    "debuggers": [
      {
        "type": "sqflint",
        "label": "SQFLint debugger",

        "program": "./debugger/adapter.js",
        "runtime": "node",

        "configurationAttributes": {
          "launch": {
            "properties": {
              "rptPath": {
                "type": "string",
                "description": "Path to folder with rpt files.",
                "default": null
              }
            }
          }
        },
        "initialConfigurations": "extension.sqflint.provideInitialConfigurations"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^1.8.9",
    "vscode": "^0.11.0",
    "xmldoc": "^0.5.1"
  },
  "dependencies": {
    "vscode-languageclient": "^2.2.1",
    "vscode-languageserver": "^2.5.0",
    "vscode-debugprotocol": "^1.15.0-pre.1",
    "vscode-debugadapter": "^1.15.0-pre.1"
  }
}
